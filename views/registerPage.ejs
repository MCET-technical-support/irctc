<div class="Create_account">
    <h1>Create a new account!</h1>
    <% if (typeof errors !== 'undefined') { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= errors %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div> 
    <% } %>
    <form action="/user/register" method="post">
        <p>Email : <input type="email" id="Name" name="email" placeholder="Email..." value=<%= typeof email !== 'undefined'? email : '' %>></p>
        <p>Username : <input type="text" id="Username_cre" name="username" placeholder="Username...."></p>
        <p>Phone no. : <input type="tel" id="tel_cre" name="phone", placeholder="Phone no...." value= <%= typeof phone !== 'undefined'? phone : '' %>></p>
        <p>Data of Birth : <input type="date" id="date" name="dob" > </p>
        <p>Password : <input type="password" id="Password_cre" name="password" placeholder="Password...."></p>
        <p>Conform Password : <input type="password" id="con_Password_cre" name="con_password" placeholder="Conform Password...."></p>
        <br>
        <input type="submit" id="create_data" value="Create account">
        <br>
        Already have an Account?
        <a href="/user/login"Login here</a><br> <br> <br>
    </form>
</div>